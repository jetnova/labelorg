<h2><%= recording_acts_formatter(@recording) %></h2>
<h3><%= @recording.title %></h3>
<% if current_user.admin? %>
  <%= simple_form_for [current_user.record_label, @recording], method: :patch do |f| %>

    <div class="form-inputs">
      <%= f.input :title,
                  label: false,
                  input_html: { placeholder: @recording.title } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
<% end %>


<%= link_to 'Back to Recordings', :back %>
