<h3>New Song</h3>

<%= simple_form_for @song do |f| %>
  <div>
    <%= f.input :title, label: 'Song Title', placeholder: 'The Greatest Song in the World' %>
    <%= f.input :iswc, label: 'ISWC', placeholder: 'T-034.524.680-1' %>
    <%= f.input :lyrics %>
    <%= f.association :musicians, label: 'Creators', input_html: { class: 'select2', multiple: "multiple" }  %>
  </div>
  <div>
    <%= f.button :submit %>
  </div>
<% end %>
