<h3>New Musician Record</h3>

<%= simple_form_for @musician do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob, label: 'Date of Birth', start_year: Date.today.year - 100,
                              end_year: Date.today.year,
                              order: [:day, :month, :year],
                              input_html: { name: 'musician[dob_d]' } %>
    <%= f.input :cob, label: 'Country of Birth', collection: MusiciansHelper::COUNTRIES %>
    <%= f.input :nationality %>
    <%= f.input :ipi, label: 'IPI' %>
    <%= f.input :cae, label: 'CAE' %>
    <%= f.input :isrc_stem, label: 'ISRC Stem' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
