<h3>New Musician Record</h3>

<%= simple_form_for @musician do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob, as: :date,
                      html5: true,
                      label: 'Date of Birth', start_year: Date.today.year - 100,
                      end_year: Date.today.year,
                      order: [:day, :month, :year] %>
    <%= f.input :cob, label: 'Country of Birth', collection: MusiciansHelper::COUNTRIES %>
    <%= f.input :nationality %>
    <%= f.input :ipi, label: 'IPI' %>
    <%= f.input :cae, label: 'CAE' %>
    <%= f.input :isrc_stem, label: 'ISRC Stem' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
